@model ApiProjeKampi.WebUI.Dtos.ReservationDto.CreateReservationDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadDefaultComponentPartial");

<body class="index-page">

    @await Component.InvokeAsync("_NavbarDefaultComponentPartial");

    <main class="main">

        <!-- Hero Section -->
        @await Component.InvokeAsync("_FeatureDefaultComponentPartial");

        <!-- /Hero Section -->
        <!-- About Section -->
        @await Component.InvokeAsync("_AboutDefaultComponentPartial");
        <!-- /About Section -->
        <!-- Why Us Section -->
        @await Component.InvokeAsync("_ServiceDefaultCopmonentPartial");
        <!-- /Why Us Section -->
        <!-- Stats Section -->
        @await Component.InvokeAsync("_HomePageStatisticsComponentPartial");

        <!-- /Stats Section -->
        <!-- Menu Section -->
        @await Component.InvokeAsync("_DefaultMenuViewComponentsPartial");
        <!-- /Menu Section -->
        <!-- Testimonials Section -->
        @await Component.InvokeAsync("_TestimonialDefaultComponentPartial");
        <!-- /Testimonials Section -->
        <!-- Events Section -->
        @await Component.InvokeAsync("_EventDefaultComponentPartial");
        <!-- /Events Section -->
        <!-- Chefs Section -->
        @await Component.InvokeAsync("_ChefDefaultComponentPartial");
        <!-- /Chefs Section -->
        <!-- Book A Table Section -->
        <section id="book-a-table" class="book-a-table section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Reservasyon Paneli </h2>
                <p><span>Sizleri ağırlamak İçin</span> <span class="description-title">Sabırsızlanıyoruz<br></span></p>
            </div><!-- End Section Title -->
            <div class="container">

                <div class="row g-0" data-aos="fade-up" data-aos-delay="100">

                    <div class="col-lg-4 reservation-img" style="background-image: url(/yummy-red-1.0.0/assets/img/reservation.jpg);"></div>

                    <div class="col-lg-8 d-flex align-items-center reservation-form-bg" data-aos="fade-up" data-aos-delay="200">
                        <form method="post" role="form" class="php-email-form">
                            <div class="row gy-4">
                                <div class="col-lg-4 col-md-6">
                                    <input type="text" asp-for="NameSurname" class="form-control" id="name" placeholder="Adınız Soyadınız" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Email Adresiniz" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="text" asp-for="PhoneNumber" class="form-control" id="phone" placeholder="Telefon Numaranız" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="date" asp-for="ReservationDate" class="form-control" id="date" placeholder="Reservasyon Tarihi" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="time" asp-for="ReservationTime" class="form-control" id="time" placeholder="Reservasyon Saati" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="number" asp-for="CountofPeople" class="form-control" id="people" placeholder="Kişi Sayısı" required="">
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <textarea class="form-control" asp-for="Message" rows="5" placeholder="Eklemek istedikleriniz"></textarea>
                            </div>

                            <div class="text-center mt-3">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>
                                <div class="sent-message">Reservasyon talebiniz alınmıştır. Ekip arkadaşlarımız size en kısa süre içinde telefon ya da e-mail üzerinden dönüş sağlayacaktır. Teşekkürler, görüşmek üzere!</div>
                                <button type="submit">Reservasyon yapın</button>
                            </div>
                        </form>
                    </div><!-- End Reservation Form -->

                </div>

            </div>

        </section>
        <!-- /Book A Table Section -->
        <!-- Gallery Section -->
        @await Component.InvokeAsync("_DefaultGallaryComponentParial")

        <!-- /Gallery Section -->
        <!-- Contact Section -->

        <section id="contact" class="contact section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Contact</h2>
                <p><span>Need Help?</span> <span class="description-title">Contact Us</span></p>
            </div><!-- End Section Title -->

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="mb-5">
                    <iframe style="width: 100%; height: 400px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen=""></iframe>
                </div><!-- End Google Maps -->

                <div class="row gy-4">

                    <div class="col-md-6">
                        <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="200">
                            <i class="icon bi bi-geo-alt flex-shrink-0"></i>
                            <div>
                                <h3>Address</h3>
                                <p>A108 Adam Street, New York, NY 535022</p>
                            </div>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="col-md-6">
                        <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="300">
                            <i class="icon bi bi-telephone flex-shrink-0"></i>
                            <div>
                                <h3>Call Us</h3>
                                <p>+1 5589 55488 55</p>
                            </div>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="col-md-6">
                        <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="400">
                            <i class="icon bi bi-envelope flex-shrink-0"></i>
                            <div>
                                <h3>Email Us</h3>
                                <p>info@example.com</p>
                            </div>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="col-md-6">
                        <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="500">
                            <i class="icon bi bi-clock flex-shrink-0"></i>
                            <div>
                                <h3>Opening Hours<br></h3>
                                <p><strong>Mon-Sat:</strong> 11AM - 23PM; <strong>Sunday:</strong> Closed</p>
                            </div>
                        </div>
                    </div><!-- End Info Item -->

                </div>
                @await Html.PartialAsync("~/Views/Message/SendMessage.cshtml")

                <!-- End Contact Form -->

            </div>

        </section>
        <!-- /Contact Section -->

    </main>

    @await Component.InvokeAsync("_FooterDefaultComponentPartial");

</body>

</html>