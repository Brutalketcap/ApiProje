@model List<ApiProjeKampi.WebUI.Dtos.FeatureDto.ResultFeatureDto>

@foreach (var itme in Model)
{

    <section id="hero" class="hero section light-background">

        <div class="container">
            <div class="row gy-4 justify-content-center justify-content-lg-between">
                <div class="col-lg-5 order-2 order-lg-1 d-flex flex-column justify-content-center">
                    <h1 data-aos="fade-up">@itme.Title<br>@itme.SubTitle</h1>
                    <p data-aos="fade-up" data-aos-delay="100">@itme.Description</p>
                    <div class="d-flex" data-aos="fade-up" data-aos-delay="200">
                        <a href="#book-a-table" class="btn-get-started">Rezervasyon Yapın</a>
                        <a href="@itme.VideoUrl" class="glightbox btn-watch-video d-flex align-items-center"><i class="bi bi-play-circle"></i><span>Video İzleyin</span></a>
                    </div>
                </div>
                <div class="col-lg-5 order-1 order-lg-2 hero-img" data-aos="zoom-out">
                    <img src="@itme.ImageUrl" class="img-fluid animated" alt="">
                </div>
            </div>
        </div>

    </section>
}