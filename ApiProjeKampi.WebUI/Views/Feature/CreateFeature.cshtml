@model ApiProjeKampi.WebUI.Dtos.FeatureDto.CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan alan Ekleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <labe>Başlık</labe>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br>
                            <labe>Alt Başlık</labe>
                            <input type="text" asp-for="SubTitle" class="form-control" />
                            <br>
                            <labe>Açıklama<labe>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br>
                            <labe>Görsel Url</labe>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br>
                            <labe>Video Url (Embed Link)</labe>
                            <input type="text" asp-for="VideoUrl" class="form-control" />
                            <br>
                            <button class="btn-primary">Öne Çıkan Alan Oluştur</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


