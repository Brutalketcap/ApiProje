@model List<ApiProjeKampi.WebUI.Dtos.FeatureDto.ResultFeatureDto>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan alan İşlemler</h4>
                    </div>

                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Video Url</th>
                                    <th scope="col">Görsel Url</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.Description</td>
                                        <td>@item.VideoUrl</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (Model.Count == 1)
                        {
                            <a href="#" class="btn btn-info">Feature Mevcut</a>
                        }
                        else
                        {
                            <a href="/Feature/CreateFeature/" class="btn btn-info">Yeni Feature Girişi</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
