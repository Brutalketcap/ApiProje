@model List<ApiProjeKampi.WebUI.Dtos.ReservationDto.ResultReservationDto>
@{
    ViewData["Title"] = "ReservationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Kategor Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Müşteri Adı</th>
                                    <th scope="col">Rezervasyon Tarihi</th>
                                    <th scope="col">Rezervasyon Saati</th>
                                    <th scope="col">Rezervasyon Durumu</th>
                                    <th scope="col">Kişi Sayısı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Onay Ver</th>
                                    <th scope="col">Beklet</th>
                                    <th scope="col">İptal Et</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.NameSurname</td>
                                        <td>@item.ReservationDate.ToString("dd.MM.yyyy")</td>
                                        <td>@item.ReservationTime</td>
                                        <td>@item.ReservationStatus</td>
                                        <td>@item.CountofPeople</td>
                                        <td><a href="/Reservation/DeleteReservation/@item.ReservationId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Reservation/UpdateReservation/@item.ReservationId" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/Reservation/AcceptReservation/@item.ReservationId" class="btn btn-info">Onay Ver</a></td>
                                        <td><a href="/Reservation/WaitReservation/@item.ReservationId" class="btn btn-warning">Beklet</a></td>
                                        <td><a href="/Reservation/CanselReservation/@item.ReservationId" class="btn btn-dark">İptal et</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</section>