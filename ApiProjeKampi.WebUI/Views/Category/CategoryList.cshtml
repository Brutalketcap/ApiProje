@model List<ApiProjeKampi.WebUI.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    int count = 0;
}
 
<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Kategor Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.CategoryName</td>
                                        <td><a href="/Category/UpdateCatory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/Category/DeleteCatory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Category/CreateCategory/" class="btn btn-info">Yeni Kategori Girişi</a>
                    </div>                  
                </div>
            </div>
        </div>
    </div>
</section>