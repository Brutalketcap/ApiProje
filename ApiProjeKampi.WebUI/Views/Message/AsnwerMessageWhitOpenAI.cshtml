@model ApiProjeKampi.WebUI.Dtos.MessageDto.GetMessageByIdDto

@{
    ViewData["Title"] = "AsnwerMessageWhitOpenAI";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Open AI ile Otamatik Mesaj Yatnı Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="MessageId" />
                            <labe>Gönderici Ad Soyad</labe>
                            <textarea class="form-control" asp-for="MessageDetails" style="height:200px !important"></textarea>
                            <br>
                            <labe>OpenAI Otamatik Cevap </labe>
                            <textarea class="form-control" style="height:200px !important">@ViewBag.answerAI</textarea>
                            <br>
                            <button class="btn btn-primary">Cevabı Mail Olarak Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>