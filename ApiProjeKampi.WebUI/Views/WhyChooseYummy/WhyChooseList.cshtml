@model List<ApiProjeKampi.WebUI.Dtos.WyChooseYummyDto.ResultWhyChooseYummyDto>
@{
    ViewData["Title"] = "WhyChooseList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Neden Biz Seçmelisiniz</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><a href="/WhyChooseYummy/UpdateWhyChoose/@item.ServiceId" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/WhyChooseYummy/DeleteWhyChoose/@item.ServiceId" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/WhyChooseYummy/CreateWhyChoose/" class="btn btn-info">Yeni Alan Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>